<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.auth.AuthFragment">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="0dp"
        app:layout_flexBasisPercent="35%"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:scaleX="1.4"
            android:src="@drawable/im_mozaic"/>

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_flexGrow="1"
        app:flexDirection="column"
        >

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_flexGrow="0.6"
            app:flexDirection="column"
            >

            <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:alignItems="center"
                android:paddingTop="10dp"
            app:justifyContent="space_between"
            android:paddingHorizontal="25dp"

            app:layout_flexBasisPercent="50%">

            <TextView
                android:id="@+id/time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingHorizontal="25dp"

                app:layout_flexBasisPercent="50%">

                <TextView
                    android:id="@+id/auth_screen_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp" />

            </com.google.android.flexbox.FlexboxLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_flexGrow="1.75"
            app:justifyContent="center"
            app:flexDirection="column"
            android:paddingHorizontal="20dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:scaleType="fitStart"
                app:layout_flexBasisPercent="25%"
                android:src="@drawable/im_hokygo"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/auth_description"
                android:text="HokyGO adalah aplikasi layanan PPOB, Multi Jasa dan Profesi"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />



        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_flexGrow="1"
            app:flexDirection="column"
            app:justifyContent="center"
            android:paddingHorizontal="20dp"
            >

            <Button
                style="@style/Widget.MaterialComponents.Button"
                android:id="@+id/auth_sign_in_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_flexBasisPercent="30%"
                android:textSize="16sp"
                android:text="sign in"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/auth_sign_up_button"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:textStyle="bold"
                app:layout_flexBasisPercent="25%"
                android:text="Create an account"
                tools:ignore="HardcodedText" />


        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>

</com.google.android.flexbox.FlexboxLayout>